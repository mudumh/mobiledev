<%= form_for @tool do |f|%>
	<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title,class:'form-control'%>
	</div>
	
	<div class="form-group">
	<%= f.label :url %>
	<%= f.text_field :url,class:'form-control'%>
	</div>

	<div class="form-group">
	<%= f.label :desc %>
	<%= f.text_area :desc,class:'form-control'%>
	</div>

	<div class="form-group">
  <%= f.submit 'Submit', class:'btn btn-primary'%>
	</div>
	
<% end%>