<%= form_for @tool do |f|%>
	<div class="form-group">
		<%=f.label 'Submit a tool or a library'%>	
	</div>
	<div class="form-group">
		<div class= "row">
			<div class='col-md-6 col-xs-12'>
	
	<%= f.text_field :title,placeholder:'Title',class:'form-control'%>
	</div>
	</div>
	</div>
	
	<div class="form-group">
	<div class= "row">
			<div class='col-md-6 col-xs-12'>
	<%= f.text_field :url,placeholder:'Link to the tool or library',class:'form-control'%>
	</div>
	</div>
	</div>

	<div class="form-group">
	<div class= "row">
			<div class='col-md-6 col-xs-12'>
	<%= f.text_area :desc,placeholder:'Enter a description for this tool or library',class:'form-control'%>
	</div>
	</div>
	</div>

	<div class="form-group">
		<div class= "row">
			<div class='col-md-6 col-xs-12'>
  <%= f.submit 'Submit', class:'btn btn-primary'%>
	</div>
	</div>
	</div>

	
<% end%>