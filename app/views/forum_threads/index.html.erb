<div class="container-fluid">
	
  
  <div class="row">
    <%if params[:query] != nil%>
    <%=link_to 'All Posts',forum_threads_path%>
    <%end%>
  </div>
  
  <div class="row">
    <div class="col-md-3 col-xs-5">
    <%=link_to 'New Thread', new_forum_thread_path,:class => "submitlink input-block-level btn btn-primary btn-block"%>
    </div>
		
		<%if params[:query] != nil%>
