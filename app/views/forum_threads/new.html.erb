<%= form_for @forum_thread do |f| %>
	<div class="form-group">
		<div class= "row">
			<div class='col-md-7 col-xs-12'>
		<%= f.text_field :subject, placeholder: "Enter subject", class:'form-control'%>
	</div>
	</div>
	</div>
	
	<div class="form-group">
		<div class= "row">
			<div class='col-md-7 col-xs-12'>
		<%= f.fields_for :forum_posts do |fp|%>
		 <%= fp.text_area :body, placeholder: "Add a comment", rows: 10,class:'form-control' %>
		<%end%>
	</div>
	</div>
	</div>
	
	<div class="form-group">
		<div class= "row">
			<div class='col-md-7 col-xs-12'>
		<%=f.submit 'Submit',class: 'btn btn-primary btn-lg' %>
	</div>
	</div>
	</div>
<%end%>