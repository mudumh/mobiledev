<div class="container-fluid">
	<div class="row">
		<%if params[:query] != nil%>
		<%=link_to 'Back',review_requests_path%>
	<%end%>
	</div>

<div class="row">
		<div class="col-md-3 col-xs-3">
		<%=link_to 'New Request', new_review_request_path,
      :class => "submitlink input-block-level btn btn-primary btn-block"%>
		</div>
		<%= form_tag review_requests_path, method: :get do %>
    
   <div class= "col-md-6 col-xs-6 searchfield" >
    <%= text_field_tag :query, params[:query],
    		:autocomplete => :off,:placeholder => "Search ",:class => "searchfield input-block-level form-control" %> 
    </div>		
    <div class= "col-md-1 col-xs-1 searchbutton">
  	<%= submit_tag "Search",value: "Search", name: nil,class: "btn " %>
  	</div>
<% end %>
</div>


<%=link_to 'All',request_filter_path('All')%>
<%=link_to 'Android',request_filter_path('Android')%>
<%=link_to 'iOS',request_filter_path('iOS')%>
<%=link_to 'Windows',request_filter_path('Windows')%>
<%=link_to 'Others',request_filter_path('Others')%>

<% if @review_requests.length >0 %>
	<%= render @review_requests%>
<% else %>
<%= flash[:notice] %>
<%end%>
</div>

	