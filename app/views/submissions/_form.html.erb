


<div class="container-fluid">
<%= simple_form_for(@submission) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%=f.label 'Submit news'%>
  </div>
  <div class="form-group">
    <div class= "row">
      <div class='col-md-6 col-xs-12'>
    
    <%=f.text_field :title,placeholder:'Title', class:'form-control'%>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class= "row">
      <div class='col-md-6 col-xs-12'>
    
    <%=f.text_field :url,placeholder:'Link ', class:'form-control'%>
      </div>
    </div>
  </div>
   
   <div class="form-group">
    <div class= "row">
      <div class='col-md-6 col-xs-12'>
    
    <%=f.text_area :description,placeholder:'Enter a short description', 
    class:'form-control'%>
      </div>
    </div>
  </div>

   <div class="form-group">
    <div class= "row">
      <div class='col-md-6 col-xs-12'>
    
    <%= f.select :category, options_for_select([["Category", ""], "news", "tool", 
    "tutorial"]), :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class= "row">
      <div class='col-md-6 col-xs-12'>
    <%=f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
  </div>
  </div>
  </div>

<%end%>
</div>