
<div class = "row">
	<%= link_to tutorial.url,:target=>"blank" do %>
  <h3>
  	<%= tutorial.title%> 
  	<%= tutorial.get_upvotes.size %>	
	
		<% if tutorial.find_votes_for(:voter => current_user).size == 0 %>
  		<%= link_to like_tutorial_path(tutorial), method: :put, class: "" do %>
    	<span id="upvote" class="glyphicon glyphicon-chevron-up" 
    				style="color: rgb(222, 79, 34); font-size:24px;">
    	</span> 
    	<% end %>
   
    <% else %>
    <%= link_to like_tutorial_path(tutorial), method: :put, class: "" do %>
    	<span id="upvoted" class="glyphicon glyphicon-chevron-up" 
    				style="color: rgb(204, 204, 204);font-size:24px;">
    	</span> 
      <% end %>
    <%end%>
  
  </h3>
<% end %>
</div>

<div class = "row">
  <span class="give_comment">
     
      <%= link_to 'Discuss',tutorial_path(tutorial)  %>
  </span>
  <span class="postedby">
     Posted by:
      <%= link_to tutorial.user.username, user_path(tutorial.user) %>
  </span>
  <span class="posteddate">
    
	 <%=date_posted(tutorial.created_at)%>
	</span>
	
</div>
<script>
$(function() {
 
  $("span#upvote").hover(
       function () {
         $(this).removeAttr("style","color: rgb(212, 59, 44); font-size:24px;");
       }, 
      function () {
          $(this).attr("style", "color: rgb(222, 79, 34); font-size:24px;");
       }
     );
    
});

</script>
