<div class="container-fluid">
	<div class="row">
		<%if params[:query] != nil%>
			<%=link_to 'All Tutorials', tutorials_path%>
		<%end%>
	</div>	

	<div class="row">
	<%= form_tag tutorials_path, method: :get do %>	
    <div class= "col-md-7 col-xs-6 searchfield" >
    	<%= text_field_tag :query, params[:query],
    		:autocomplete => :off,:placeholder => "Search ",:class => "searchfield input-block-level form-control" %> 
    </div>		    
    <div class= "col-md-1 col-xs-1 searchbutton">
  		<%= submit_tag "Search",value: "Search", name: nil,class: "btn " %>
  	</div>
	<% end %>
	</div>
	<%= render @tutorials%>

</div>
<div id="collectionpopover">
</div>
	
