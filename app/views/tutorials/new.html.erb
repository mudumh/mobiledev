<%= form_for @tutorial do |f|%>
	
	<div class="form-group">
	<%=f.label :title%>
	<%=f.text_field :title,class:'form-control'%>
	</div>

	<div class="form-group">
	<%=f.label :url,'Paste the URL of the Tutorial'%>
	<%=f.text_field :url,class:'form-control'%>
	</div>
	
	<div class="form-group">
	<%=f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
	</div>

<%end%>