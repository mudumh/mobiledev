<%= form_for @news_item do |f| %>	
	<div class="form-group">
		<%=f.label :title, 'Title'%>
		<%=f.text_field :title%>
	</div>
	
	<div class="form-group">
		<%=f.label :url,'Paste the URL of the news item:'%>
		<%=f.text_field :url%>
	</div>
	
	<div class="form-group">
		<%=f.submit%>
	</div>

<%end%>
