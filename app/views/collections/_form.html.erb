<%= simple_form_for(@collection) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <%= f.input :name %>
  </div>
  <%= f.hidden_field :item_type, :value => @item_type %>
  <%= f.hidden_field :item_id, :value => @item_id %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
